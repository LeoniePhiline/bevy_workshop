{
	"name": "Bevy Workshop",
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
		"ghcr.io/devcontainers/features/rust:1": {},
		"ghcr.io/devcontainers/features/python:1": {
			"version": "os-provided"
		},
		"ghcr.io/lee-orr/rusty-dev-containers/wasm32-unknown-unknown:0": {}
	},
	"hostRequirements": {
		"cpus": 4
	},
	"forwardPorts": [
		8000
	],
	"postAttachCommand": {
		"server": "python -m http.server --directory wasm &"
	},
	"updateContentCommand": "cargo build --target wasm32-unknown-unknown",
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer"
			]
		}
	}
}